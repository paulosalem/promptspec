{
  "name": "promptspec",
  "displayName": "PromptSpec Syntax",
  "description": "Full language support for PromptSpec specification files (.promptspec.md) â€” completions, hover docs, diagnostics, go-to-definition, outline, visual decorations, and run commands.",
  "version": "0.6.0",
  "publisher": "prompting-adventures",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulosalem/prompting-adventures"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./src/extension.js",
  "activationEvents": [
    "onLanguage:promptspec"
  ],
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "prompt",
    "prompt engineering",
    "llm",
    "markdown",
    "template",
    "promptspec"
  ],
  "contributes": {
    "commands": [
      {
        "command": "promptspec.compose",
        "title": "PromptSpec: Compose",
        "icon": "$(play)",
        "category": "PromptSpec"
      },
      {
        "command": "promptspec.run",
        "title": "PromptSpec: Run",
        "icon": "$(rocket)",
        "category": "PromptSpec"
      },
      {
        "command": "promptspec.openTUI",
        "title": "PromptSpec: Open in TUI",
        "icon": "$(terminal)",
        "category": "PromptSpec"
      },
      {
        "command": "promptspec.discover",
        "title": "PromptSpec: Discover Specs",
        "icon": "$(search)",
        "category": "PromptSpec"
      },
      {
        "command": "promptspec.fillForm",
        "title": "PromptSpec: Fill & Run (Form)",
        "icon": "$(list-unordered)",
        "category": "PromptSpec"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "promptspec.compose",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "navigation@1"
        },
        {
          "command": "promptspec.run",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "navigation@2"
        },
        {
          "command": "promptspec.openTUI",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "navigation@3"
        },
        {
          "command": "promptspec.discover",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "navigation@4"
        },
        {
          "command": "promptspec.fillForm",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "navigation@5"
        }
      ],
      "editor/context": [
        {
          "command": "promptspec.compose",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@1"
        },
        {
          "command": "promptspec.run",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@2"
        },
        {
          "command": "promptspec.openTUI",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@3"
        },
        {
          "command": "promptspec.discover",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@4"
        },
        {
          "command": "promptspec.fillForm",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@5"
        }
      ],
      "explorer/context": [
        {
          "command": "promptspec.compose",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@1"
        },
        {
          "command": "promptspec.run",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@2"
        },
        {
          "command": "promptspec.openTUI",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@3"
        },
        {
          "command": "promptspec.fillForm",
          "when": "resourceFilename =~ /\\.promptspec\\.md$/",
          "group": "promptspec@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptspec.compose",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "resourceFilename =~ /\\.promptspec\\.md$/"
      },
      {
        "command": "promptspec.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceFilename =~ /\\.promptspec\\.md$/"
      },
      {
        "command": "promptspec.openTUI",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "resourceFilename =~ /\\.promptspec\\.md$/"
      },
      {
        "command": "promptspec.fillForm",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "resourceFilename =~ /\\.promptspec\\.md$/"
      }
    ],
    "configuration": {
      "title": "PromptSpec",
      "properties": {
        "promptspec.cliPath": {
          "type": "string",
          "default": "promptspec",
          "description": "Path to the promptspec CLI executable."
        },
        "promptspec.defaultModel": {
          "type": "string",
          "default": "",
          "description": "Default LLM model to use (e.g. gpt-4.1). Leave empty for CLI default."
        },
        "promptspec.extraArgs": {
          "type": "string",
          "default": "",
          "description": "Additional CLI arguments appended to every command."
        }
      }
    },
    "languages": [
      {
        "id": "promptspec",
        "aliases": [
          "PromptSpec",
          "Prompt Specification"
        ],
        "extensions": [
          ".promptspec.md"
        ],
        "firstLine": "^\\s*@(?:refine|note|match|if|audience|style|revise|expand|contract|execute|prompt|tool|embed)\\b",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "promptspec",
        "scopeName": "text.markdown.promptspec",
        "path": "./syntaxes/promptspec.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.markdown": "markdown"
        }
      }
    ],
    "themes": [
      {
        "label": "PromptSpec Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/promptspec-dark.json"
      },
      {
        "label": "PromptSpec Light",
        "uiTheme": "vs",
        "path": "./themes/promptspec-light.json"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.promptspec.md": "promptspec"
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "keyword.control.execute.promptspec",
            "settings": { "foreground": "#FFD700", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.type.strategy.promptspec",
            "settings": { "foreground": "#FFA500", "fontStyle": "bold" }
          },
          {
            "scope": "keyword.control.prompt.promptspec",
            "settings": { "foreground": "#00BFFF", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.section.prompt.promptspec",
            "settings": { "foreground": "#87CEEB", "fontStyle": "bold italic" }
          },
          {
            "scope": "keyword.control.tool.promptspec",
            "settings": { "foreground": "#00CED1", "fontStyle": "bold" }
          },
          {
            "scope": "entity.name.function.tool.promptspec",
            "settings": { "foreground": "#00CED1", "fontStyle": "italic" }
          },
          {
            "scope": "keyword.control.embed.promptspec",
            "settings": { "foreground": "#DA70D6", "fontStyle": "bold" }
          }
        ]
      }
    }
  }
}
