{
  "name": "PromptSpec Dark",
  "type": "dark",
  "colors": {
    "editor.background": "#1a1b26",
    "editor.foreground": "#d4d4d4",
    "editorLineNumber.foreground": "#3b4261",
    "editorLineNumber.activeForeground": "#737aa2",
    "editor.selectionBackground": "#33467c",
    "editor.lineHighlightBackground": "#1e2030"
  },
  "tokenColors": [
    {
      "name": "@execute — spec-to-execution bridge (GOLD, bold underline)",
      "scope": "keyword.control.execute.promptspec",
      "settings": {
        "foreground": "#FFD700",
        "fontStyle": "bold underline"
      }
    },
    {
      "name": "@execute strategy name (AMBER, bold)",
      "scope": "entity.name.type.strategy.promptspec",
      "settings": {
        "foreground": "#FFA500",
        "fontStyle": "bold"
      }
    },
    {
      "name": "@prompt — named prompt block (ELECTRIC BLUE, bold underline)",
      "scope": "keyword.control.prompt.promptspec",
      "settings": {
        "foreground": "#00BFFF",
        "fontStyle": "bold underline"
      }
    },
    {
      "name": "@prompt section name (SKY BLUE, bold italic)",
      "scope": "entity.name.section.prompt.promptspec",
      "settings": {
        "foreground": "#87CEEB",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "@tool directive (TEAL, bold)",
      "scope": "keyword.control.tool.promptspec",
      "settings": {
        "foreground": "#00CED1",
        "fontStyle": "bold"
      }
    },
    {
      "name": "@tool function name (TEAL, italic)",
      "scope": "entity.name.function.tool.promptspec",
      "settings": {
        "foreground": "#00CED1",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Directive keywords — @refine, @if, @match, etc. (BRIGHT PINK, bold)",
      "scope": [
        "keyword.control.import.promptspec",
        "keyword.control.switch.promptspec",
        "keyword.control.conditional.promptspec",
        "keyword.control.directive.promptspec",
        "keyword.control.assert.promptspec"
      ],
      "settings": {
        "foreground": "#FF79C6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "@note directive keyword (dimmed pink, italic)",
      "scope": "comment.block.documentation.directive.promptspec",
      "settings": {
        "foreground": "#6272A4",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "Note block content (gray italic — like comments)",
      "scope": "comment.block.documentation.promptspec",
      "settings": {
        "foreground": "#6272A4",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Debug queries — @vars?, @directives? (YELLOW, bold italic)",
      "scope": [
        "keyword.other.debug-query.promptspec",
        "keyword.operator.debug-query.promptspec"
      ],
      "settings": {
        "foreground": "#F1FA8C",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "File paths — after @refine (CYAN, underline)",
      "scope": "entity.name.filename.promptspec",
      "settings": {
        "foreground": "#8BE9FD",
        "fontStyle": "underline"
      }
    },
    {
      "name": "Mustache variables — {{name}}, {{.}} (BRIGHT ORANGE, bold)",
      "scope": "variable.other.placeholder.promptspec",
      "settings": {
        "foreground": "#FFB86C",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Mustache section names — {{#section}}, {{/section}} (ORANGE, bold italic)",
      "scope": "entity.name.tag.mustache.promptspec",
      "settings": {
        "foreground": "#FFB86C",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "Mustache/variable punctuation — {{ }} @ (PURPLE)",
      "scope": [
        "punctuation.section.embedded.begin.promptspec",
        "punctuation.section.embedded.end.promptspec"
      ],
      "settings": {
        "foreground": "#BD93F9"
      }
    },
    {
      "name": "Section operators — # and / in mustache (RED, bold)",
      "scope": "keyword.operator.section.promptspec",
      "settings": {
        "foreground": "#FF5555",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Match target variable and @if condition (ORANGE)",
      "scope": "variable.other.readwrite.promptspec",
      "settings": {
        "foreground": "#FFB86C"
      }
    },
    {
      "name": "Match case labels — \"value\" or _ (BRIGHT GREEN)",
      "scope": "string.regexp.match-case.promptspec",
      "settings": {
        "foreground": "#50FA7B",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Match arrow — ==> (RED, bold)",
      "scope": "keyword.operator.fat-arrow.promptspec",
      "settings": {
        "foreground": "#FF5555",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Escaped @@ sequences (dimmed — literal @ in output)",
      "scope": [
        "constant.character.escape.at.promptspec",
        "constant.character.escape.word.promptspec"
      ],
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "String arguments (YELLOW-GREEN)",
      "scope": "string.quoted.double.promptspec",
      "settings": {
        "foreground": "#F1FA8C"
      }
    },
    {
      "name": "Assert inline message text (YELLOW-GREEN, italic)",
      "scope": "string.unquoted.assert-message.promptspec",
      "settings": {
        "foreground": "#F1FA8C",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Directive parameter names — key: (CYAN)",
      "scope": "entity.other.attribute-name.promptspec",
      "settings": {
        "foreground": "#8BE9FD",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Key-value separator — : (dimmed)",
      "scope": "punctuation.separator.key-value.promptspec",
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Parameter values — keywords (PURPLE)",
      "scope": "support.constant.parameter-value.promptspec",
      "settings": {
        "foreground": "#BD93F9"
      }
    },
    {
      "name": "Boolean constants — true, false (PURPLE, italic)",
      "scope": "constant.language.boolean.promptspec",
      "settings": {
        "foreground": "#BD93F9",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Numeric constants (PURPLE)",
      "scope": "constant.numeric.integer.promptspec",
      "settings": {
        "foreground": "#BD93F9"
      }
    },
    {
      "name": "Markdown headings (PURPLE, bold)",
      "scope": "markup.heading.promptspec",
      "settings": {
        "foreground": "#BD93F9",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown heading punctuation — # (dimmed)",
      "scope": "punctuation.definition.heading.markdown",
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Markdown bold (white, bold)",
      "scope": "markup.bold.markdown",
      "settings": {
        "foreground": "#F8F8F2",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown italic (white, italic)",
      "scope": "markup.italic.markdown",
      "settings": {
        "foreground": "#F8F8F2",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Markdown bold/italic punctuation (dimmed)",
      "scope": [
        "punctuation.definition.bold.markdown",
        "punctuation.definition.italic.markdown"
      ],
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Markdown inline code (GREEN)",
      "scope": "markup.inline.raw.string.markdown",
      "settings": {
        "foreground": "#50FA7B"
      }
    },
    {
      "name": "Markdown code block content",
      "scope": "markup.raw.block.fenced.markdown",
      "settings": {
        "foreground": "#ABB2BF"
      }
    },
    {
      "name": "Markdown code fence punctuation (dimmed)",
      "scope": "punctuation.definition.code.fenced.markdown",
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Markdown backtick punctuation (dimmed)",
      "scope": "punctuation.definition.raw.markdown",
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Code block language identifier (CYAN)",
      "scope": "entity.name.type.language.markdown",
      "settings": {
        "foreground": "#8BE9FD"
      }
    },
    {
      "name": "Markdown link title (CYAN)",
      "scope": "string.other.link.title.markdown",
      "settings": {
        "foreground": "#8BE9FD"
      }
    },
    {
      "name": "Markdown link URL (GREEN, underline)",
      "scope": "markup.underline.link.markdown",
      "settings": {
        "foreground": "#50FA7B",
        "fontStyle": "underline"
      }
    },
    {
      "name": "Markdown link punctuation (dimmed)",
      "scope": "punctuation.definition.link.markdown",
      "settings": {
        "foreground": "#6272A4"
      }
    },
    {
      "name": "Markdown list markers (PINK)",
      "scope": "punctuation.definition.list.begin.markdown",
      "settings": {
        "foreground": "#FF79C6"
      }
    }
  ]
}
