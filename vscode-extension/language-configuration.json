{
  "comments": {
    "blockComment": ["@note\n  ", "\n"]
  },
  "brackets": [
    ["{{", "}}"],
    ["@{", "}"],
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "{{", "close": "}}" },
    { "open": "@{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" }
  ],
  "surroundingPairs": [
    { "open": "{{", "close": "}}" },
    { "open": "\"", "close": "\"" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" }
  ],
  "folding": {
    "offSide": true
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
